    <style name="Widget.Customer.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">
            @style/TextAppearance.Customer.TextInputLayout.HintText
        </item>
<!--        <item name="hintTextColor">@color/primaryTextColor</item>-->
        <item name="android:paddingBottom">8dp</item>
<!--        <item name="startIconTint">@color/iconColor</item>-->
<!--        <item name="boxStrokeColor">@color/textInputOutlineColor</item>-->
    </style>

    <style name="TextAppearance.Customer.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Customer.TextInputEditText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat</item>
<!--        <item name="android:textColor">@color/iconColor</item>-->
    </style>

    <style name="Widget.Customer.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
<!--        <item name="android:textColor">@color/iconColor</item>-->
    </style>

    <style name="TextAppearance.Customer.Toolbar.Main" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="EditText.Customer.Search.SearchBox" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextAppearance.Customer.Detail.Tag" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/montserrat</item>
<!--        <item name="android:textColor">@color/iconColor</item>-->
    </style>

    <style name="TextAppearance.Customer.Detail.Value" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/montserrat</item>
<!--        <item name="android:textColor">@color/iconColor</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spacer.Customer.Detail.Horizontal" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
<!--        <item name="android:background">@color/textInputOutlineColor</item>-->
    </style>

    <style name="Widget.Customer.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Customer.Firebase" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#ffffff</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryVariant">#fafafa</item>
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

</resources>